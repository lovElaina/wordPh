{
  "manifest_version": 3,
  "name": "药丸翻译",
  "version": "1.0",
  "description": "一个用于翻译选中文字的Chrome扩展程序，基于大模型技术，给您带来最佳的翻译结果。",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "background"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "https://dashscope.aliyuncs.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}

